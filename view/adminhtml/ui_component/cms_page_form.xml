<?xml version="1.0" encoding="UTF-8"?>

<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="search_engine_optimisation">
        <field name="meta_robots" formElement="select" sortOrder="1">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">page</item>
                    <item name="default" xsi:type="string">website</item>
                    <item name="additionalClasses" xsi:type="string">cs-csfeature__logo</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Meta Robots</label>
                <dataScope>meta_robots</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="MageSuite\SeoMetaRobots\Model\Config\Source\Attribute\RobotsMetaTag" />
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>
</form>
